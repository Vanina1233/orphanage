generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserType {
  DONATOR
  ORPHANAGE
  ADMIN
}

enum PostType {
  ALERT
  ACTU
}

model User {
  id        String   @id @default(uuid())
  firstname String
  lastname  String
  email     String   @unique
  hash      String
  type      UserType @default(DONATOR)
  address   String
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

